<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminRemoveManager">

    <!-- Header for column names -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/header_background_color"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Manager ID"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salary"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No of Employees"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- RecyclerView for displaying list of managers -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewManagers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"/>

    <!-- Layout for Manager ID input and Remove button -->
    <RelativeLayout
        android:id="@+id/managerIdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewEnterManagerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Manager ID:"
            android:textSize="16sp"
            android:layout_alignParentTop="true" />

        <EditText
            android:id="@+id/editTextManagerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@id/textViewEnterManagerID"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/buttonRemoveManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_below="@id/editTextManagerID"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

</RelativeLayout>
